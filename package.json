{
  "name": "flexline",
  "version": "0.1.0",
  "description": "WordPress FSE Theme",
  "main": "index.js",
  "scripts": {
    "dev": "npm run development",
    "development": "cross-env NODE_ENV=development webpack --progress --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "npm run development -- --watch",
    "prod": "npm run production",
    "production": "mix --production",
    "lint-staged": "lint-staged",
    "lint-php": "vendor/bin/phpcs --standard=WordPress inc",
    "fix-php": "vendor/bin/phpcbf --standard=WordPress inc",
    "lint-js": "wp-scripts lint-js src/js --fix && prettier --write 'src/js/**/*.js'",
    "lint-style": "stylelint 'src/scss/**/*.scss' --fix && prettier --write 'src/scss/**/*.scss'",
    "ci-lint-js": "wp-scripts lint-js src/js --max-warnings=0 .",
    "ci-lint-style": "stylelint 'src/scss/**/*.scss' --max-warnings=0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.8",
    "@babel/preset-react": "^7.24.7",
    "@wordpress/eslint-plugin": "^20.0.0",
    "@wordpress/scripts": "^28.3.0",
    "@wordpress/stylelint-config": "^22.3.0",
    "autoprefixer": "^10.4.17",
    "cross-env": "^7.0.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.0.11",
    "laravel-mix": "^6.0.49",
    "lint-staged": "^15.2.7",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.3.3",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.77.8",
    "sass-loader": "^14.2.1",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-scss": "^4.2.0"
  },
  "lint-staged": {
    "*.php": "vendor/bin/phpcbf --standard=WordPress",
    "*.js": "wp-scripts lint-js --fix",
    "*.scss": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
